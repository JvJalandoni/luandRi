@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Manage Users";
}

<!-- Dashboard Header -->
<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Manage Users</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="users" class="w-4 h-4 mr-2"></i>
                Manage system administrators and members
            </p>
        </div>
        <div class="flex items-center space-x-3">
            <a asp-action="ProfileLogs" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white text-sm font-medium rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl whitespace-nowrap">
                <i data-lucide="file-text" class="w-4 h-4 mr-2 flex-shrink-0"></i>
                <span>View Profile Logs</span>
            </a>
            <a asp-action="Create" class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white text-sm font-medium rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl whitespace-nowrap">
                <i data-lucide="plus" class="w-4 h-4 mr-2 flex-shrink-0"></i>
                <span>Add User</span>
            </a>
        </div>
    </div>
</div>

<!-- APK Download Link Settings -->
<div class="bg-gradient-to-r from-emerald-600/20 to-teal-600/20 backdrop-blur-xl shadow-xl overflow-hidden rounded-2xl border border-emerald-500/30 mb-6 animate-slide-up" style="animation-delay: 0.05s;">
    <div class="px-6 py-6">
        <div class="flex items-start justify-between mb-4">
            <div>
                <h3 class="text-lg font-bold text-white flex items-center">
                    <i data-lucide="smartphone" class="w-5 h-5 mr-2 text-emerald-400"></i>
                    Customer App Download Link
                </h3>
                <p class="mt-1 text-sm text-slate-300">
                    Set the external download link for the mobile app (MediaFire, Google Drive, Dropbox, etc.)
                </p>
            </div>
        </div>
        <form id="apkLinkForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-slate-200 mb-2">APK Download URL</label>
                <div class="flex gap-3">
                    <input type="url"
                           id="apkDownloadUrl"
                           name="apkDownloadUrl"
                           value="@ViewBag.ApkDownloadUrl"
                           placeholder="https://www.mediafire.com/file/xxx/app-release.apk or https://drive.google.com/..."
                           class="flex-1 px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-emerald-500/50 focus:border-transparent transition-all duration-200 text-sm">
                    <button type="submit"
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-700 hover:to-teal-700 text-white text-sm font-medium rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl whitespace-nowrap">
                        <i data-lucide="save" class="w-4 h-4 mr-2"></i>
                        Save Link
                    </button>
                </div>
                <p class="mt-2 text-xs text-slate-400">
                    This link will be used on the login page for customers to download the mobile app
                </p>
            </div>
            <div id="apkLinkStatus" class="hidden"></div>
        </form>
    </div>
</div>

<script>
document.getElementById('apkLinkForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const url = document.getElementById('apkDownloadUrl').value;
    const statusDiv = document.getElementById('apkLinkStatus');

    try {
        const response = await fetch('/Users/SaveApkDownloadUrl', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ url: url })
        });

        if (response.ok) {
            statusDiv.className = 'mt-3 p-3 bg-emerald-500/20 border border-emerald-500/30 rounded-lg text-emerald-300 text-sm';
            statusDiv.textContent = '✓ APK download link saved successfully!';
            statusDiv.classList.remove('hidden');

            setTimeout(() => {
                statusDiv.classList.add('hidden');
            }, 3000);
        } else {
            throw new Error('Failed to save');
        }
    } catch (error) {
        statusDiv.className = 'mt-3 p-3 bg-red-500/20 border border-red-500/30 rounded-lg text-red-300 text-sm';
        statusDiv.textContent = '✗ Failed to save APK download link. Please try again.';
        statusDiv.classList.remove('hidden');
    }
});
</script>

<!-- Users Table -->
<div class="bg-slate-800/50 backdrop-blur-xl shadow-xl overflow-hidden rounded-2xl border border-slate-700/50 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-6 py-6 border-b border-slate-700/50">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-xl font-bold text-white">System Users</h3>
                <p class="mt-1 text-sm text-slate-400 flex items-center">
                    <i data-lucide="shield-check" class="w-4 h-4 mr-2"></i>
                    Administrator and member accounts
                </p>
            </div>
            <button class="inline-flex items-center px-3 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-lg transition-all duration-200 whitespace-nowrap">
                <i data-lucide="filter" class="w-4 h-4 mr-2 flex-shrink-0"></i>
                <span>Filter</span>
            </button>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-700/30">
            <thead class="bg-slate-700/30">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">User</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Role</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Last Login</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-slate-800/50 divide-y divide-slate-700/30">
                @foreach (dynamic userItem in Model)
                {
                    var user = userItem.User as AdministratorWeb.Models.ApplicationUser;
                    var roles = userItem.Roles as IList<string>;
                    
                    <tr class="hover:bg-slate-700/20 transition-colors duration-200 group">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    @await Component.InvokeAsync("UserAvatar", new { userId = user.Id, userName = user.FullName, size = "h-12 w-12", textSize = "text-base" })
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-semibold text-white">@user.FullName</div>
                                    <div class="text-sm text-slate-400 flex items-center">
                                        <i data-lucide="calendar" class="w-3 h-3 mr-1"></i>
                                        Created: @user.CreatedAt.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-slate-300 flex items-center">
                                <i data-lucide="mail" class="w-3 h-3 mr-2 text-slate-400"></i>
                                @user.Email
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-3 py-1 inline-flex items-center text-xs font-semibold rounded-lg bg-brand-900/50 text-brand-300 border border-brand-700/50">
                                <i data-lucide="shield-check" class="w-3 h-3 mr-1"></i>
                                @string.Join(", ", roles)
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-3 py-1 inline-flex items-center text-xs font-semibold rounded-lg @(user.IsActive ? "bg-emerald-900/50 text-emerald-300 border border-emerald-700/50" : "bg-red-900/50 text-red-300 border border-red-700/50")">
                                <i data-lucide="@(user.IsActive ? "check-circle" : "x-circle")" class="w-3 h-3 mr-1"></i>
                                @(user.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                            <div class="flex items-center">
                                <i data-lucide="clock" class="w-3 h-3 mr-2"></i>
                                @(user.LastLoginAt?.ToString("MMM dd, yyyy HH:mm") ?? "Never")
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex items-center space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="inline-flex items-center px-2 py-1 bg-brand-600/20 text-brand-400 hover:bg-brand-600/30 text-xs font-medium rounded-lg transition-all duration-200 border border-brand-600/30 whitespace-nowrap">
                                    <i data-lucide="edit" class="w-3 h-3 mr-1 flex-shrink-0"></i>
                                    <span>Edit</span>
                                </a>
                                <form asp-action="ToggleStatus" method="post" class="inline">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="inline-flex items-center px-2 py-1 @(user.IsActive ? "bg-orange-600/20 text-orange-400 hover:bg-orange-600/30 border border-orange-600/30" : "bg-emerald-600/20 text-emerald-400 hover:bg-emerald-600/30 border border-emerald-600/30") text-xs font-medium rounded-lg transition-all duration-200 whitespace-nowrap">
                                        <i data-lucide="@(user.IsActive ? "pause" : "play")" class="w-3 h-3 mr-1 flex-shrink-0"></i>
                                        <span>@(user.IsActive ? "Deactivate" : "Activate")</span>
                                    </button>
                                </form>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="inline-flex items-center px-2 py-1 bg-red-600/20 text-red-400 hover:bg-red-600/30 text-xs font-medium rounded-lg transition-all duration-200 border border-red-600/30 whitespace-nowrap">
                                    <i data-lucide="trash-2" class="w-3 h-3 mr-1 flex-shrink-0"></i>
                                    <span>Delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>