@model IEnumerable<AdministratorWeb.Models.AccountingActionLog>
@{
    ViewData["Title"] = "Accounting Audit Logs";
    var searchQuery = ViewBag.SearchQuery as string ?? "";
    var currentAction = ViewBag.CurrentAction as string ?? "";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var pageSize = (int)ViewBag.PageSize;
    var totalCount = (int)ViewBag.TotalCount;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-clipboard-list me-2"></i>
                Accounting Audit Logs
            </h2>
            <p class="text-muted">View all accounting actions performed by administrators</p>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="AuditLogs" class="row g-3">
                <div class="col-md-5">
                    <label for="searchQuery" class="form-label">Search</label>
                    <input type="text" class="form-control" id="searchQuery" name="searchQuery"
                           value="@searchQuery" placeholder="Customer name, ID, or admin name...">
                </div>
                <div class="col-md-4">
                    <label for="action" class="form-label">Action Type</label>
                    <select class="form-select" id="action" name="action">
                        <option value="">All Actions</option>
                        <option value="MarkAsPaid" selected="@(currentAction == "MarkAsPaid")">Mark as Paid</option>
                        <option value="MarkAsPending" selected="@(currentAction == "MarkAsPending")">Mark as Pending</option>
                        <option value="MarkAsFailed" selected="@(currentAction == "MarkAsFailed")">Mark as Failed</option>
                        <option value="CancelPayment" selected="@(currentAction == "CancelPayment")">Cancel Payment</option>
                        <option value="CreateAdjustment" selected="@(currentAction == "CreateAdjustment")">Create Adjustment</option>
                        <option value="DeleteAdjustment" selected="@(currentAction == "DeleteAdjustment")">Delete Adjustment</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a href="@Url.Action("AuditLogs")" class="btn btn-secondary">
                        <i class="fas fa-undo"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Summary -->
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Showing <strong>@Model.Count()</strong> of <strong>@totalCount</strong> total log entries
        @if (totalPages > 1)
        {
            <span>(Page @currentPage of @totalPages)</span>
        }
    </div>

    <!-- Audit Logs Table -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Date & Time</th>
                                <th>Action</th>
                                <th>Customer</th>
                                <th>Amount</th>
                                <th>Status Change</th>
                                <th>Performed By</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>
                                        <small class="text-muted">@log.ActionedAt.ToString("MMM dd, yyyy")</small><br>
                                        <strong>@log.ActionedAt.ToString("hh:mm tt")</strong>
                                    </td>
                                    <td>
                                        @switch (log.Action)
                                        {
                                            case "MarkAsPaid":
                                                <span class="badge bg-success"><i class="fas fa-check-circle"></i> Mark as Paid</span>
                                                break;
                                            case "MarkAsPending":
                                                <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> Mark as Pending</span>
                                                break;
                                            case "MarkAsFailed":
                                                <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Mark as Failed</span>
                                                break;
                                            case "CancelPayment":
                                                <span class="badge bg-secondary"><i class="fas fa-ban"></i> Cancel Payment</span>
                                                break;
                                            case "CreateAdjustment":
                                                <span class="badge bg-info"><i class="fas fa-plus-circle"></i> Create Adjustment</span>
                                                break;
                                            case "DeleteAdjustment":
                                                <span class="badge bg-dark"><i class="fas fa-trash"></i> Delete Adjustment</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@log.Action</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <strong>@log.CustomerName</strong><br>
                                        <small class="text-muted">ID: @log.CustomerId</small>
                                    </td>
                                    <td>
                                        @if (log.Amount.HasValue)
                                        {
                                            <strong class="text-success">â‚±@log.Amount.Value.ToString("N2")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.OldStatus) || !string.IsNullOrEmpty(log.NewStatus))
                                        {
                                            <small>
                                                @if (!string.IsNullOrEmpty(log.OldStatus))
                                                {
                                                    <span class="badge bg-light text-dark">@log.OldStatus</span>
                                                }
                                                @if (!string.IsNullOrEmpty(log.OldStatus) && !string.IsNullOrEmpty(log.NewStatus))
                                                {
                                                    <i class="fas fa-arrow-right mx-1"></i>
                                                }
                                                @if (!string.IsNullOrEmpty(log.NewStatus))
                                                {
                                                    <span class="badge bg-primary">@log.NewStatus</span>
                                                }
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.PerformedByUserName))
                                        {
                                            <strong>@log.PerformedByUserName</strong><br>
                                            <small class="text-muted">@log.PerformedByUserEmail</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">System</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.Details))
                                        {
                                            <small>@log.Details</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav aria-label="Audit logs pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("AuditLogs", new { searchQuery, action = currentAction, page = currentPage - 1, pageSize })">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>

                    @for (var i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("AuditLogs", new { searchQuery, action = currentAction, page = i, pageSize })">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("AuditLogs", new { searchQuery, action = currentAction, page = currentPage + 1, pageSize })">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
            <h5>No audit logs found</h5>
            <p>There are no accounting actions logged yet, or your search didn't match any records.</p>
        </div>
    }

    <!-- Version Number -->
    <div class="text-center mt-4">
        <small class="text-muted">Audit Logs Page Version: <strong>1.3</strong> | Last Updated: @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss") UTC</small>
    </div>
</div>
