@model IEnumerable<AdministratorWeb.Models.RequestActionLog>

@{
    ViewData["Title"] = "Request Action Logs";
    var searchQuery = ViewBag.SearchQuery as string;
    var currentAction = ViewBag.CurrentAction as string;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalCount = (int)ViewBag.TotalCount;
}

@functions {
    private string CleanIpAddress(string? ipAddress)
    {
        if (string.IsNullOrEmpty(ipAddress))
            return "N/A";
        return ipAddress.Replace("::ffff:", "");
    }

    private string GetActionBadgeColor(string action)
    {
        return action switch
        {
            "Accept" => "emerald",
            "Decline" => "red",
            "Complete" => "blue",
            "ManualCreate" => "purple",
            "ForceCancelAll" => "orange",
            _ => "slate"
        };
    }

    private string GetActionIcon(string action)
    {
        return action switch
        {
            "Accept" => "check-circle",
            "Decline" => "x-circle",
            "Complete" => "check-square",
            "ManualCreate" => "plus-circle",
            "ForceCancelAll" => "alert-triangle",
            _ => "activity"
        };
    }
}

<!-- Dashboard Header -->
<div class="mb-8 animate-slide-up">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white mb-2">Request Action Logs</h1>
            <p class="text-slate-400 flex items-center">
                <i data-lucide="history" class="w-4 h-4 mr-2"></i>
                Track all laundry request actions and modifications
            </p>
        </div>
        <a asp-action="Index" class="inline-flex items-center px-4 py-2 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-xl transition-all duration-200 shadow-lg hover:shadow-xl border border-slate-600/50">
            <i data-lucide="arrow-left" class="w-4 h-4 mr-2"></i>
            Back to Requests
        </a>
    </div>
</div>

<!-- Filters Card -->
<div class="bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 mb-6 animate-slide-up" style="animation-delay: 0.1s;">
    <div class="px-6 py-5">
        <form method="get" asp-action="RequestLogs" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-semibold text-slate-300 mb-2 flex items-center">
                    <i data-lucide="search" class="w-4 h-4 mr-2"></i>
                    Search by Customer, Admin, or Request ID
                </label>
                <input type="text" name="searchQuery" value="@searchQuery" placeholder="Search..." class="w-full px-4 py-2.5 bg-slate-700/50 border border-slate-600/50 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all placeholder-slate-400" />
            </div>
            <div>
                <label class="block text-sm font-semibold text-slate-300 mb-2 flex items-center">
                    <i data-lucide="tag" class="w-4 h-4 mr-2"></i>
                    Filter by Action
                </label>
                <select name="action" class="w-full px-4 py-2.5 bg-slate-700/50 border border-slate-600/50 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent transition-all">
                    <option value="">All Actions</option>
                    <option value="Accept" selected="@(currentAction == "Accept")">Accept</option>
                    <option value="Decline" selected="@(currentAction == "Decline")">Decline</option>
                    <option value="Complete" selected="@(currentAction == "Complete")">Complete</option>
                    <option value="ManualCreate" selected="@(currentAction == "ManualCreate")">Manual Create</option>
                    <option value="ForceCancelAll" selected="@(currentAction == "ForceCancelAll")">Force Cancel All</option>
                </select>
            </div>
            <div class="flex items-end space-x-2">
                <button type="submit" class="flex-1 inline-flex items-center justify-center px-4 py-2.5 bg-gradient-to-r from-brand-600 to-indigo-600 hover:from-brand-700 hover:to-indigo-700 text-white text-sm font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl">
                    <i data-lucide="filter" class="w-4 h-4 mr-2"></i>
                    Apply
                </button>
                <a href="@Url.Action("RequestLogs")" class="inline-flex items-center justify-center px-4 py-2.5 bg-slate-700/50 hover:bg-slate-600/50 text-white text-sm font-medium rounded-lg transition-all duration-200 border border-slate-600/50">
                    <i data-lucide="x" class="w-4 h-4"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="mb-6 px-4 py-3 bg-blue-900/30 border border-blue-700/50 rounded-xl text-blue-300 animate-slide-up" style="animation-delay: 0.2s;">
    <div class="flex items-center">
        <i data-lucide="info" class="w-5 h-5 mr-3"></i>
        <div>
            <div>Showing <span class="font-bold mx-1">@Model.Count()</span> of <span class="font-bold mx-1">@totalCount</span> total log entries</div>
            <div class="text-xs text-yellow-300 mt-1">DEBUG: Model type: @Model.GetType().Name, Model is null: @(Model == null), Model count: @Model.Count()</div>
        </div>
    </div>
</div>

<!-- Logs Timeline -->
<div class="space-y-4 animate-slide-up" style="animation-delay: 0.3s;">
    @if (Model.Any())
    {
        @foreach (var log in Model)
        {
            var badgeColor = GetActionBadgeColor(log.Action);
            var actionIcon = GetActionIcon(log.Action);
            var cleanIp = CleanIpAddress(log.IpAddress);

            <div class="bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 overflow-hidden hover:border-slate-600/50 transition-all duration-200">
                <div class="px-6 py-5">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-start space-x-4 flex-1">
                            <!-- Action Icon -->
                            <div class="flex-shrink-0">
                                <div class="w-12 h-12 rounded-full bg-@(badgeColor)-900/50 border-2 border-@(badgeColor)-700/50 flex items-center justify-center">
                                    <i data-lucide="@actionIcon" class="w-6 h-6 text-@(badgeColor)-400"></i>
                                </div>
                            </div>

                            <!-- Log Info -->
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center space-x-2 mb-1">
                                    <span class="px-3 py-1 text-sm font-bold rounded-lg bg-@(badgeColor)-900/50 text-@(badgeColor)-300 border border-@(badgeColor)-700/50">
                                        @log.Action
                                    </span>
                                    <span class="text-slate-400">on Request</span>
                                    <a href="@Url.Action("Details", new { id = log.RequestId })" class="text-brand-400 hover:text-brand-300 font-mono font-bold">
                                        #@log.RequestId
                                    </a>
                                </div>
                                <p class="text-lg font-bold text-white mt-2">@log.CustomerName</p>
                                <p class="text-sm text-slate-400">Customer ID: @log.CustomerId</p>
                            </div>
                        </div>

                        <!-- Timestamp -->
                        <div class="text-right flex-shrink-0 ml-4">
                            <p class="text-sm text-slate-400 flex items-center justify-end">
                                <i data-lucide="clock" class="w-3 h-3 mr-1"></i>
                                @log.ActionedAt.ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                            </p>
                        </div>
                    </div>

                    <!-- Performed By -->
                    @if (!string.IsNullOrEmpty(log.PerformedByUserName))
                    {
                        <div class="mb-4 px-4 py-2 bg-slate-700/30 rounded-lg border border-slate-600/30">
                            <p class="text-sm text-slate-300 flex items-center">
                                <i data-lucide="user-cog" class="w-4 h-4 mr-2 text-purple-400"></i>
                                Performed by:
                                <span class="font-semibold text-white ml-1">@log.PerformedByUserName</span>
                                @if (!string.IsNullOrEmpty(log.PerformedByUserEmail))
                                {
                                    <span class="text-slate-400 ml-2">(@log.PerformedByUserEmail)</span>
                                }
                            </p>
                        </div>
                    }

                    <!-- Details Grid -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        @if (!string.IsNullOrEmpty(log.OldStatus))
                        {
                            <div class="px-3 py-2 bg-red-900/20 rounded-lg border border-red-800/30">
                                <p class="text-xs text-red-400 mb-1">From Status:</p>
                                <p class="text-sm text-red-300 font-semibold">@log.OldStatus</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(log.NewStatus))
                        {
                            <div class="px-3 py-2 bg-emerald-900/20 rounded-lg border border-emerald-800/30">
                                <p class="text-xs text-emerald-400 mb-1">To Status:</p>
                                <p class="text-sm text-emerald-300 font-semibold">@log.NewStatus</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(log.AssignedRobotName))
                        {
                            <div class="px-3 py-2 bg-blue-900/20 rounded-lg border border-blue-800/30">
                                <p class="text-xs text-blue-400 mb-1">Robot:</p>
                                <p class="text-sm text-blue-300 font-semibold">@log.AssignedRobotName</p>
                            </div>
                        }
                        @if (log.TotalCost.HasValue)
                        {
                            <div class="px-3 py-2 bg-yellow-900/20 rounded-lg border border-yellow-800/30">
                                <p class="text-xs text-yellow-400 mb-1">Total Cost:</p>
                                <p class="text-sm text-yellow-300 font-semibold">â‚±@log.TotalCost.Value.ToString("F2")</p>
                            </div>
                        }
                        @if (log.WeightKg.HasValue)
                        {
                            <div class="px-3 py-2 bg-cyan-900/20 rounded-lg border border-cyan-800/30">
                                <p class="text-xs text-cyan-400 mb-1">Weight:</p>
                                <p class="text-sm text-cyan-300 font-semibold">@log.WeightKg.Value kg</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(log.RequestType))
                        {
                            <div class="px-3 py-2 bg-purple-900/20 rounded-lg border border-purple-800/30">
                                <p class="text-xs text-purple-400 mb-1">Type:</p>
                                <p class="text-sm text-purple-300 font-semibold">@log.RequestType</p>
                            </div>
                        }
                    </div>

                    <!-- Reason -->
                    @if (!string.IsNullOrEmpty(log.Reason))
                    {
                        <div class="mt-4 px-4 py-3 bg-orange-900/20 rounded-lg border border-orange-800/30">
                            <p class="text-xs text-orange-400 mb-1 font-semibold">Reason:</p>
                            <p class="text-sm text-orange-300">@log.Reason</p>
                        </div>
                    }

                    <!-- Notes -->
                    @if (!string.IsNullOrEmpty(log.Notes))
                    {
                        <div class="mt-4 px-4 py-3 bg-slate-700/30 rounded-lg border border-slate-600/30">
                            <p class="text-xs text-slate-400 mb-1 font-semibold">Notes:</p>
                            <p class="text-sm text-slate-300">@log.Notes</p>
                        </div>
                    }

                    <!-- IP Address -->
                    <div class="mt-4 pt-4 border-t border-slate-700/50">
                        <p class="text-xs text-slate-500 flex items-center">
                            <i data-lucide="map-pin" class="w-3 h-3 mr-2"></i>
                            IP Address: <span class="font-mono ml-1">@cleanIp</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="bg-slate-800/50 backdrop-blur-xl shadow-xl rounded-2xl border border-slate-700/50 overflow-hidden">
            <div class="px-6 py-16 text-center">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-slate-700/50 rounded-full mb-4">
                    <i data-lucide="inbox" class="w-8 h-8 text-slate-400"></i>
                </div>
                <h3 class="text-lg font-semibold text-white mb-2">No logs found</h3>
                <p class="text-slate-400">No request action logs match your current filters</p>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (totalPages > 1)
{
    <nav class="mt-8 flex justify-center animate-slide-up" style="animation-delay: 0.4s;">
        <div class="inline-flex items-center space-x-1 bg-slate-800/50 backdrop-blur-xl rounded-xl border border-slate-700/50 p-1.5">
            <a href="@Url.Action("RequestLogs", new { searchQuery = searchQuery, action = currentAction, page = currentPage - 1 })"
               class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-all @(currentPage == 1 ? "text-slate-500 cursor-not-allowed" : "text-white hover:bg-slate-700/50")">
                <i data-lucide="chevron-left" class="w-4 h-4 mr-1"></i>
                Previous
            </a>

            <div class="flex items-center space-x-1 px-2">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <a href="@Url.Action("RequestLogs", new { searchQuery = searchQuery, action = currentAction, page = i })"
                       class="inline-flex items-center justify-center w-10 h-10 text-sm font-medium rounded-lg transition-all @(i == currentPage ? "bg-gradient-to-r from-brand-600 to-indigo-600 text-white shadow-lg" : "text-slate-300 hover:bg-slate-700/50")">
                        @i
                    </a>
                }
            </div>

            <a href="@Url.Action("RequestLogs", new { searchQuery = searchQuery, action = currentAction, page = currentPage + 1 })"
               class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-all @(currentPage == totalPages ? "text-slate-500 cursor-not-allowed" : "text-white hover:bg-slate-700/50")">
                Next
                <i data-lucide="chevron-right" class="w-4 h-4 ml-1"></i>
            </a>
        </div>
    </nav>
}
