{
  "ConnectionStrings": {
    "DefaultConnection": "server=YOUR_SERVER_IP;port=3306;database=YOUR_DATABASE;uid=YOUR_USERNAME;pwd=YOUR_PASSWORD"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Key": "YOUR_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS_LONG",
    "Issuer": "LaundryAdministrator",
    "Audience": "LaundryMobileApp",
    "ExpireHours": 24
  },
  "Laundry": {
    "PricePerKg": 25.00,
    "MinimumCharge": 50.00,
    "WeightRoundingDecimals": 2,
    "AutoAcceptRequests": false
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "YOUR_EMAIL@gmail.com",
    "SmtpPassword": "YOUR_SMTP_APP_PASSWORD",
    "FromEmail": "YOUR_EMAIL@gmail.com",
    "FromName": "LuandRi Laundry Service",
    "EnableSsl": true,
    "EmailEnabled": true,
    "MaxRetryAttempts": 3,
    "RetryDelayMilliseconds": 1000
  }
}
